@model Piranha.Areas.Manager.Models.CommentSettingsModel
@{
    ViewBag.Title = @Piranha.Resources.Comment.SettingsTitle ;
}
@section Toolbar {
@Html.Partial("Partial/Tabs")
<div class="toolbar">
    <div class="inner">
        <ul>
            <li><a class="save submit">@Piranha.Resources.Global.ToolbarSave</a></li>
            <li><a href="@Url.Action("settings")" class="refresh">@Piranha.Resources.Global.ToolbarReload</a></li>
        </ul>
        <div class="clear"></div>
    </div>
</div>
}
@{ Html.BeginForm() ; }
<div class="grid_12">
    <div class="box">
        <div class="title">@Html.CheckBoxFor(m => m.EnableAnonymous, new { @class = "right"})<h2>@Piranha.Resources.Comment.AllowAnonymous</h2></div>
    </div>
</div>
<div class="grid_3">
    <div class="box">
        <div class="title"><h2>@Piranha.Resources.Comment.Pages</h2></div>
        <div class="inner">
            <ul class="form">
                <li>@Html.CheckBoxFor(m => m.EnablePages, new { @class = "right" })
                    <label>@Piranha.Resources.Comment.Activate</label></li>
            </ul>
        </div>
    </div>
</div>
<div class="grid_3">
    <div class="box">
        <div class="title"><h2>@Piranha.Resources.Comment.Posts</h2></div>
        <div class="inner">
            <ul class="form">
                <li>@Html.CheckBoxFor(m => m.EnablePosts, new { @class = "right" })
                    <label>@Piranha.Resources.Comment.Activate</label></li>
            </ul>
        </div>
    </div>
</div>
<div class="grid_3">
    <div class="box">
        <div class="title"><h2>@Piranha.Resources.Comment.Media</h2></div>
        <div class="inner">
            <ul class="form">
                <li>@Html.CheckBoxFor(m => m.EnableMedia, new { @class = "right" })
                    <label>@Piranha.Resources.Comment.Activate</label></li>
            </ul>
        </div>
    </div>
</div>
<div class="grid_3">
    <div class="box">
        <div class="title"><h2>@Piranha.Resources.Comment.Uploads</h2></div>
        <div class="inner">
            <ul class="form">
                <li>@Html.CheckBoxFor(m => m.EnableUploads, new { @class = "right" })
                    <label>@Piranha.Resources.Comment.Activate</label></li>
            </ul>
        </div>
    </div>
</div>
@{ Html.EndForm() ; }