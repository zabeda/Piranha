@* Generator: WebPage *@

@inherits Piranha.Manager.ManagerContentPage<Piranha.Manager.Models.PermissionListModel>
@{
    Page.Title = @Piranha.Resources.Settings.ListTitleAccess ;
}
@section Head {
    <script type="text/javascript">
        $(document).ready(function () {
            $(document).ready(function () {
                var options = {
                    listClass: 'list-js',
                    searchId: 'search',
                    valueNames: ['name', 'group', 'updated', 'created']
                };
                var list = new List('list', options);
            });
        });
    </script>
}
@section Toolbar {
@*@Html.Partial("Partial/Tabs")*@
<div class="toolbar">
    <div class="inner">
        <ul>
            <li id="add"><a href="@Manager.Href("~/permission/edit")" class="add">@Piranha.Resources.Global.ToolbarAdd</a></li>
            <li><a href="@Manager.Href("~/permission")" class="refresh">@Piranha.Resources.Global.ToolbarReload</a></li>
        </ul>
        <button class="search"></button>@Html.TextBox("search")
        <div class="clear"></div>
    </div>
</div>
}

<div class="grid_12">
    <table id="list" class="list">
        <thead>
            <tr>
                <th><span class="sort asc" data-sort="name">@Piranha.Resources.Global.Name</span></th>
                <th><span class="sort" data-sort="group">@Piranha.Resources.Global.Group</span></th>
                <th class="date"><span class="sort" data-sort="updated">@Piranha.Resources.Global.Updated</span></th>
                <th class="date"><span class="sort" data-sort="created">@Piranha.Resources.Global.Created</span></th>
                <th class="one"></th>
            </tr>
        </thead>
        <tbody class="list-js">
            @foreach (var permission in Model.Permissions) {
            <tr>
                <td class="name"><a href="@Manager.Href("~/permssion/edit/" + permission.Id)">@permission.Name</a></td>
                <td class="group">@permission.Group.Name</td>
                <td class="updated">@permission.Updated.ToString("yyyy-MM-dd")</td>
                <td class="created">@permission.Created.ToString("yyyy-MM-dd")</td>
                <td class="buttons">
                    @if (!permission.IsLocked) {
                    <a class="icon delete" href="@Manager.Href("~/permission/delete/" + permission.Id)"></a>
                    }
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>